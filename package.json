{
	"name": "auth-service",
	"version": "1.0.0",
	"description": "User authentication and management service for the application",
	"main": "dist/server.js",
	"scripts": {
		"dev": "nodemon src/server.ts",
		"start": "node dist/server.js",
		"build": "tsc",
		"format:fix": "prettier --write .",
		"format:check": "prettier . --check",
		"lint:check": "eslint .",
		"lint:fix": "eslint . --fix",
		"prepare": "husky install"
	},
	"author": "Roshan Kumar",
	"license": "ISC",
	"engines": {
		"node": ">=22.10.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.28.0",
		"@types/node": "^22.15.29",
		"eslint": "^9.28.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.0",
		"nodemon": "^3.1.10",
		"prettier": "3.5.3",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.1"
	},
	"lint-staged": {
		"*.ts": [
			"npm run format:fix",
			"npm run lint:fix"
		]
	},
	"dependencies": {
		"@types/express": "^5.0.3",
		"@types/http-errors": "^2.0.5",
		"dotenv": "^16.5.0",
		"express": "^5.1.0",
		"http-errors": "^2.0.0",
		"winston": "^3.17.0"
	}
}
