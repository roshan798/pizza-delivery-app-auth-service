{
	"name": "auth-service",
	"version": "1.0.0",
	"description": "User authentication and management service for the application",
	"main": "dist/server.js",
	"scripts": {
		"test": "jest --watchAll=true --runInBand",
		"dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
		"start": "cross-env NODE_ENV=prod ts-node src/server.ts",
		"build": "tsc",
		"format:fix": "prettier --write .",
		"format:check": "prettier . --check",
		"lint:check": "eslint .",
		"lint:fix": "eslint . --fix",
		"prepare": "husky install",
		"typeorm": "typeorm-ts-node-commonjs",
		"start:DB": "docker run --rm --name mernpg-container -e POSTGRES_USER=root -e POSTGRES_PASSWORD=root -v mernpgdata:/var/lib/postgresql/data -p 5432:5432 -d postgres"
	},
	"author": "Roshan Kumar",
	"license": "ISC",
	"engines": {
		"node": ">=22.10.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.28.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.15.29",
		"cross-env": "^7.0.3",
		"eslint": "^9.28.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^16.1.0",
		"nodemon": "^3.1.10",
		"prettier": "3.5.3",
		"ts-jest": "^29.3.4",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.1"
	},
	"lint-staged": {
		"*.ts": [
			"npm run format:fix",
			"npm run lint:fix"
		]
	},
	"dependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^5.0.3",
		"@types/http-errors": "^2.0.5",
		"@types/supertest": "^6.0.3",
		"bcrypt": "^6.0.0",
		"dotenv": "^16.5.0",
		"express": "^5.1.0",
		"express-validator": "^7.2.1",
		"http-errors": "^2.0.0",
		"pg": "^8.14.1",
		"reflect-metadata": "^0.2.2",
		"supertest": "^7.1.1",
		"typeorm": "0.3.24",
		"winston": "^3.17.0"
	}
}
